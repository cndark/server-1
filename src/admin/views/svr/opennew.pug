extends ../base.pug

block css
    link(href='/css/page.css', rel='stylesheet')

    style.
        .text {
            font-weight: bold;
            margin-top: 5px;
            margin-left: 5px;
        }

        .list {
            margin-top: 5px;
            padding: 5px;
            width: 100%;
            height: 220px;
            background-color: #f8fafc;
            word-break: break-word;
            overflow-y: auto;
        }

block content
    .container-fluid
        .row
            .col-md-6.col-md-offset-3
                .panel.panel-info
                    .panel-heading.head
                        .clearfix
                            | 新服开启
                            button.btn.btn-default OK
                            span.alert
                    .panel-body
                        .row
                            .col-md-12
                                select.form-control(name='area')
                                    - for (var v of areas)
                                        option(value=v[0]) #{v[1]}
                        .row
                            .col-md-12
                                hr
                        .row
                            .col-md-4
                                | 上次新服Id
                                .text#last_id
                            .col-md-4
                                | 上次新服开启时间
                                .text#last_ts
                            .col-md-4
                                | 正在开启新服Id
                                .text#opening
                        .row
                            .col-md-12
                                hr
                        .row
                            .col-md-12
                                | 已准备好新服Ids 
                                .badge
                                .list#wait_ids



block script
    script(src='/scripts/svr/opennew.js')
