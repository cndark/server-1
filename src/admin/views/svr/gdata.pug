extends ../base.pug

block css
    link(href='/css/page.css', rel='stylesheet')

block content
    .container-fluid
        .row
            .col-md-6.col-md-offset-3
                .panel.panel-info
                    .panel-heading.head
                        .clearfix
                            | 重读游戏配置
                            button.btn.btn-default OK
                            span.alert
                    .panel-body
                        .row
                            .col-md-12
                                | 区域
                                select.form-control(name='area')
                                    - for (var v of areas)
                                        option(value=v[0]) #{v[1]}
                        .row
                            .col-md-12
                                | 目标
                                input.form-control(name='target', placeholder='全服: all | 指定服: 1,3-5 ...')
                        .row
                            .col-md-12
                                | 配置文件
                                select.form-control(name='conf_k', multiple)



block script
    script(src='/scripts/svr/gdata.js')
