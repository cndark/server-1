extends ../base.pug

block css
    link(href='/css/page.css', rel='stylesheet')

block content
    .container-fluid
        .row
            .col-md-6
                .panel.panel-info
                    .panel-heading.head
                        | 游戏公告
                        button#btn_notice.btn.btn-default OK
                        span.alert
                    .panel-body
                        .row
                            .col-md-6
                                | 区域
                                select.form-control(name='area')
                                    - for (var v of areas)
                                        option(value=v[0]) #{v[1]}
                            .col-md-6
                                | 语言
                                select.form-control(name='lang')
                                    - for (var v of languages)
                                        option(value=v[0]) #{v[1]}
                        .row
                            .col-md-6
                                | 开始时间
                                input.form-control(type='text', name='d_start' placeholder='yyyy-MM-DD HH:mm:ss') 
                            .col-md-6
                                | 结束时间
                                input.form-control(type='text', name='d_end' placeholder='yyyy-MM-DD HH:mm:ss')
                        .row
                            .col-md-12
                                | 标题
                                input.form-control(type='text', name='title')
                            .col-md-12
                                | 内容
                                textarea.form-control(rows=20, name='content')
            .col-md-6
                .panel.panel-info
                    .panel-heading.head
                        | 跑马灯
                        button#btn_lamp.btn.btn-default OK
                        span.alert
                    .panel-body
                        .row
                            .col-md-12
                                | 区域
                                select.form-control(name='area')
                                    - for (var v of areas)
                                        option(value=v[0]) #{v[1]}
                        .row
                            .col-md-12
                                | 目标
                                input.form-control(type='text', name='target', placeholder='全服: all | 指定服: 1,3-5 ...')
                        .row
                            .col-md-12
                                | 文本
                                input.form-control(type='text', name='content', placeholder='@clearall:所有;@clearsys:系统;@clearuser:玩家')



block script
    script(src='/scripts/svr/notice.js')
