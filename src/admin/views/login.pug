doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')

        title Admin Login

        // bootstrap & jquery
        link(href='/dist/bootstrap/css/bootstrap.min.css', rel='stylesheet')
        script(src='/dist/jquery/jquery-2.2.3.min.js')
        script(src='/dist/bootstrap/js/bootstrap.min.js')

        // sign in
        link(href='/css/signin.css', rel='stylesheet')

    body
        .container
            form(method='post')
                h2 Admin Login
                
                input.form-control(type='text',     name='user', placeholder='账号', required='', autofocus='')
                input.form-control(type='password', name='pwd',  placeholder='密码', required='')

                button.btn.btn-lg.btn-primary.btn-block(type='submit') 登入

                if login_err
                    .alert.alert-danger.err
                        span.glyphicon.glyphicon-exclamation-sign
                        span
                        |  !{login_err}
